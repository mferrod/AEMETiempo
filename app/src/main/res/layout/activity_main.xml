<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AEDDDD"
    tools:context=".View.MainActivity">

    <TextView
        android:id="@+id/aemetMariano"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aemet_mariano"
        android:textAlignment="center"
        android:fontFamily="@font/brainwork"
        android:textSize="30sp"
        android:background="#96C4C4"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linear"
        />
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aemetMariano"
        app:layout_constraintBottom_toBottomOf="@id/rvData"
        android:background="@drawable/border"
        android:orientation="vertical">
        <EditText
            android:id="@+id/etLocalidad"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/introduce_tu_localidad"
            android:fontFamily="@font/lazy_sunday"
            android:textColorHint="@color/black"
            android:inputType="text"
            android:importantForAutofill="no" />
        <Spinner
            android:id="@+id/spinnerSelector"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/nombreCreador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/mariano_fernandez_rodero"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#96C4C4"
        android:fontFamily="@font/brainwork"
        app:layout_constraintTop_toBottomOf="@+id/rvData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>